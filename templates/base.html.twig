<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
        <meta name="description" content="" />
        <meta name="author" content="" />
        <title>{% block title %}Welcome Yocto Shop!{% endblock %}</title>
        <!-- Favicon-->
        <link rel="icon" type="image/x-icon" href="{{ asset('main/assets/favicon.ico') }}" />
        <!-- Bootstrap icons-->
		<link href="{{ asset('main/css/bootstrap-icons.css') }} " rel="stylesheet" />
        <!-- Core theme CSS (includes Bootstrap)-->
        <link href="{{ asset('main/css/styles.css') }} " rel="stylesheet" />
    </head>
    <body>
        {{ flasher_render() }}
        <!-- Navigation-->
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <div class="container px-4 px-lg-5">
                <a class="navbar-brand" href="{{ path('main') }}">Yocto Shop</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation"><span class="navbar-toggler-icon"></span></button>
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0 ms-lg-4">
                        <li class="nav-item"><a class="nav-link active" aria-current="page" href="{{ path('main') }}">Home</a></li>
                        {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                            <li class="nav-item">
                                <a class="nav-link" target="_blank" href="{{ path('product.index') }}">
                                    <strong>Dashboard</strong>
                                </a>
                            </li>
                        {% else %}
                            <li class="nav-item"><a class="nav-link active" aria-current="page" href="{{ path('login') }}">Login</a></li>
                            <li class="nav-item"><a class="nav-link active" aria-current="page" href="{{ path('reg') }}">Sing Out</a></li>
                        {% endif %}
                    </ul>
                    <form class="d-flex">
                        <a class="btn btn-outline-dark" href="{{ path('cart.index') }}">
                            <i class="bi-cart-fill me-1"></i>
                            Cart
                            <span class="badge bg-dark text-white ms-1 rounded-pill">
                                {{ cart_products.numberOfProductsInCart() }}
                            </span>
                        </a>
                    </form>
                </div>
            </div>
        </nav>
        
		{% block body %}{% endblock %}
		
        <!-- Footer-->
        <footer class="py-5 bg-dark">
            <div class="container"><p class="m-0 text-center text-white">Copyright &copy; Your Website 2021</p></div>
        </footer>
        <!-- Bootstrap core JS-->
        <script src="{{ asset('main/js/bootstrap.bundle.min.js') }}"></script>
        <!-- Core theme JS-->
        <script src="{{ asset('main/js/scripts.js') }}"></script>
    </body>
</html>
